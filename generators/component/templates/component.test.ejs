import TestUtils from 'react-addons-test-utils';
import {expect} from 'chai';
import <%= Component %> from '../src/<%= module %>';

describe('Testing <<%= Component %>/>', function () {
  it(`Component <<%= Component %>/> says 'Hello!'`, function () {
    const component = TestUtils.renderIntoDocument(<<%= Component %>/>);
    const h1 = TestUtils.findRenderedDOMComponentWithTag(component, 'h1');

    expect(h1.textContent).to.equal('Hello!');
  });
});
