import {src, dest, lastRun, task<% if (antlr4) { %>, parallel<% } %>} from "gulp";
import babel from "gulp-babel";
import sourcemaps from "gulp-sourcemaps";
import cached from "gulp-cached";
import newer from "gulp-newer";<% if (antlr4) { %>
import {makeParser} from "./parse"<% } %>

const buildDir = "<%- buildDir %>";
const srcGlob = <%- srcGlob %>;

export const build = () => {
  return src(srcGlob, {
    base: process.cwd(),
    since: lastRun(build)
  })
    .pipe(newer(buildDir))
    .pipe(cached())
    .pipe(sourcemaps.init())
    .pipe(babel())
    .pipe(sourcemaps.write(".", {
      sourceRoot: file => file.cwd
    }))
    .pipe(dest(buildDir));
};
<% if (antlr4) { %>
task("build", parallel(build, makeParser));<% } else { %>
task("build", build);<% } %>
